<%- contentFor('body') %>

<div class="messages-section">
    <% for (let i=0; i<messages.length; i++) { %>
        <div class="message" id=<%= messages[i].msgid%>>
            <p class="message-text"><%= messages[i].message%></p>
            <% if (user) {%>
                <p class="message-info"><span class="message-user"><%= messages[i].name%></span> | <%= messages[i].timestamp%></p>
                <% if (user.membership === 3) {%>
                    <form action="/delete/<%=messages[i].msgid %>" method="POST" class="delete">
                        <button class="delete-button"></button>
                    </form>
                <% } %>
            <% } %>
        </div>
    <% } %>
    <form action="/add" method="GET">
        <button type="submit" class="add-button"></button>
    </form>
</div>
<footer>
    <small>Copyright&#169 SafariNexus</small>
</footer>